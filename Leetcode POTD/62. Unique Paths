// Tabulation Approach (Bottom-Up DP)
// Time Complexity: ğ‘‚(ğ‘šÃ—ğ‘›) O(mÃ—n) â†’ Since we fill an m Ã— n table.
// Space Complexity: ğ‘‚(ğ‘šÃ—ğ‘›) O(mÃ—n) â†’ Extra DP table storage.
// 
class Solution {
public:
   
    int uniquePaths(int m, int n) {
        vector<vector<int>> dp(m, vector<int>(n,1));

        for(int i  = 1; i<m; i++){
            for(int j = 1; j<n; j++){
                if(i == 0 && j==0) dp[i][j] = 1;
                else{
                    int up = dp[i-1][j];
                    int left = dp[i][j-1];
                    dp[i][j] = up+left;
                }
            }
        }
        return dp[m-1][n-1]; 
    }
};